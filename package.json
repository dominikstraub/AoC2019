{
    "name": "AoC-2019",
    "version": "1.0.0",
    "description": "Mobile GIS Framework",
    "author": {
        "name": "Dominik Straub",
        "email": "dominik.straub@gmail.com",
        "url": "dominikstraub.com"
    },
    "license": "MIT",
    "private": false,
    "main": "index.html",
    "directories": {},
    "scripts": {
        "setup-dev": "npm install"
    },
    "repository": {},
    "devDependencies": {
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "prettier": "^1.19.1",
        "tar-dependency": "0.0.3"
    },
    "dependencies": {},
    "tarDependencies": {},
    "eslintConfig": {
        "root": true,
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 8
        },
        "env": {
            "browser": true,
            "es6": true
        },
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "tabWidth": 4,
                    "printWidth": 120
                }
            ],
            "no-unused-vars": [
                "error",
                {
                    "vars": "all",
                    "args": "none"
                }
            ],
            "semi": [
                "error",
                "always"
            ],
            "curly": "error",
            "eqeqeq": "error",
            "no-eval": "error",
            "no-loop-func": "error",
            "radix": "error",
            "comma-dangle": "error",
            "no-undef": "error"
        },
        "globals": {}
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none",
        "trailingCommaPHP": "none",
        "braceStyle": "1tbs"
    }
}
